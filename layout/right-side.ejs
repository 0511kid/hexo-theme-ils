<div class="right-side-container">
    <div class="nav-container animated">
        <%- partial('common/nav') %>
    </div>
    <div class="article-post-container animated">
        <% if (is_home()) { %>
            <!-- 载入首页的内容 -->
            <%- partial('home-post') %>

        <% } else if (is_archive()) { %>
            <!-- 载入归档页面的内容 -->
            <%- partial('archive-post') %>

        <% } else if (is_post()) { %>
            <!-- 载入文章页面的内容 -->
            <%- partial('article-post') %>

        <% } else if (is_category()) { %>
            <!-- 载入分类页面的内容 -->
            <%- partial('category-post') %>

        <% } else if (is_tag()) { %>
            <!-- 载入标签页面的内容 -->
            <%- partial('tag-post') %>

        <% } else if (page.title == 'about') { %>
            <!-- 载入关于页面的内容 -->
            <%- partial('about') %>
        <% } %>
    </div>
</div>