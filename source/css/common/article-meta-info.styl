.article-meta-info {
  color: #bbbbbb;
  font-size: 12px;

  .article-meta-item {
    margin-right: 10px;
  }

  .article-tags, .article-categories {
    display: inline;

    ul, li {
      display: inline;
    }

    a {
      text-decoration: none;
      color: rgba(0, 0, 0, 0.44);
      font-weight: 400;

      &:hover {
        text-decoration: none;
      }
    }
  }
}