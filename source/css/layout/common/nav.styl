.nav {
  position relative
  width 100%
  height 100%
  box-sizing border-box
  background: #fff
  border-bottom 1px solid #f2f2f2
  font-size: 12px;
  padding: 20px;

  .menu-list {
    position: absolute
    top: 50%;
    transform: translateY(-50%);

    .menu-item {
      float: left
      padding-right: 20px

      a {
        color: #6a6a6a;

        &:hover {
          color: #4786D6;
        }

        &.current {
          color: #5A5A5A;
          padding-bottom: 20px;
          border-bottom: 1px solid #4a4a4a;
        }

      }

    }
  }
}