@require "common/variables.styl"

.home-content-container {

  .home-article-list {

    .home-article-item {

      margin-bottom: 30px;
      padding-bottom: 30px;
      border-bottom: 1px solid $border-color;

      .home-article-title {

        h3 {
          font-weight: 600;
          color: $article-title-color;
          font-size: 22px;
          margin: 0;
        }

        a {
          color: $article-title-color;
        }
      }

      .home-article-content {
        padding: 15px 0;
        line-height: 2em;
      }

    }
  }


  .paginator {

    padding-bottom: 40px;

    .page-number {
      display: none !important;
    }

    a.prev {
      float: left;
    }

    a.next {
      float: right;
    }

  }

}