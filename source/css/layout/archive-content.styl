@require 'common/variables.styl'

$archive-year-font-size = 24px;
$archive-article-item-title-font-size = 16px;
$archive-article-date-font-size = 14px;

.archive-container {

  .archive-item {
    margin-bottom: 40px;

    .archive-item-header {
      .archive-year {
        font-size: $archive-year-font-size;
        color: $second-text-color;
        font-weight: 600;
        margin-right: 20px;
      }

    }


    .article-list {
      padding-left: 20px;

      .article-item {
        margin: 20px 0;
        font-size: $archive-article-item-title-font-size;

        a.article-title {
          color: $normal-text-color;

          &:hover {
            color: $primary-color;
          }
        }

        .article-date {
          font-size: $archive-article-date-font-size;
          float: right;
        }
      }
    }
  }
}


